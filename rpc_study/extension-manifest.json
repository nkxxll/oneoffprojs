{
  "name": "rpc-study-lsp",
  "displayName": "RPC Study Language Server",
  "description": "A language server implementation study using JSON-RPC",
  "version": "0.1.0",
  "publisher": "rpc-study",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/client/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "typescript",
        "extensions": [".ts"],
        "aliases": ["TypeScript", "ts"]
      },
      {
        "id": "javascript",
        "extensions": [".js"],
        "aliases": ["JavaScript", "js"]
      }
    ]
  },
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
